{
  "id": "talos-controller",
  "name": "talos-controller",
  "boot": {
    "kernel": "/assets/talos/main/kernel-amd64",
    "initrd": ["/assets/talos/main/initramfs-amd64.xz"],
    "args": [
      "initrd=initramfs-amd64.xz",
      "init_on_alloc=1",
      "slab_nomerge",
      "pti=on",
      "console=tty0",
      "console=ttyS0",
      "printk.devkmsg=on",
      "talos.platform=metal",
      "siderolink.api=https://omni.greyrock.io:8090/?jointoken=JOINTOKEN",
      "talos.events.sink=[fdae:41e4:649b:9303::1]:8091",
      "talos.logging.kernel=tcp://[fdae:41e4:649b:9303::1]:8092"
    ]
  }
}
