{
  "id": "talos-controller",
  "name": "talos-controller",
  "boot": {
    "kernel": "/assets/talos/utility/kernel-amd64",
    "initrd": ["/assets/talos/utility/initramfs-amd64.xz"],
    "args": [
      "initrd=initramfs-amd64.xz",
      "init_on_alloc=1",
      "slab_nomerge",
      "pti=on",
      "console=tty0",
      "console=ttyS0",
      "printk.devkmsg=on",
      "talos.platform=metal",
      "talos.config=http://10.1.1.11/assets/talos/utility/utility-k8s4.greyrock.io.yaml"
    ]
  }
}
